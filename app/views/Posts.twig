{% extends 'Template.twig' %}

{% block content %}
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="{{ path_for("home") }}">Home</a></li>
            <li class="active">Posts</li>
        </ul>

        <h1>All posts <small>Order by date</small></h1>
        <br>

        <div class="row">
            <table id="posts" class="table table-striped table-hover" style="border: 1px solid #d9dfe3">
                <thead>
                <tr>
                    <th>Thumbmail</th>
                    <th>Title</th>
                    <th>Teaser</th>
                    <th>Subject</th>
                    <th>Author</th>
                    <th>Date</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                <tr>
                    <td><a href="{{ path_for('post_render', {'slug': post.slug}) }}"><img src="/uploads/{{ post.thumbmail }}" width="250px" alt="Miniature"></a></td>
                    <td><a href="{{ path_for('post_render', {'slug': post.slug}) }}"><h5>{{ post.title }}</h5></a></td>
                    <td style="text-align: justify;"><p>{{ post.teaser }}</p></td>
                    <td>{{ post.trending | upper }}</td>
                    <td>{{ post.author }}</td>
                    <td><span class="pull-left" data-ago="{{ post.date }}"></span></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}